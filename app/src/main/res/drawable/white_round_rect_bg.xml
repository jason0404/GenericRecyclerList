<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape (solid white) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Border shape (stroke) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Set your desired border color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>